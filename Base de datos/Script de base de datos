/*********************************************************************TABLAS*****************************************************/
create table tb_destinations(
	id int auto_increment primary key,
    name varchar(200) not null,
    address varchar(500)not null,
    description varchar(800), 
    x varchar(50),
    y varchar(50),
    image varchar(500)
);


create table tb_value_destionations(
	id int auto_increment primary key,
    price char not null default 'z',
    preference_place char not null default 'z',
    destination_type char not null default 'z',
    travel_time char not null default 'z',
    road_type char not null default 'z'
);

create table tb_user(
	id int auto_increment primary key,
    user_name varchar(50) not null,
    password varchar(50) not null
);

/***********************************************************PROCEDIMIENTOS ALMACENADOS*************************************************/
DELIMITER $$
CREATE PROCEDURE sp_get_all_destinations()
BEGIN
  SELECT name, address, description, x, y, image, price, preference_place, destination_type, travel_time, road_type
			FROM tb_value_destionations, tb_destinations where tb_value_destionations.id = tb_destinations.id;
END $$
DELIMITER ;

